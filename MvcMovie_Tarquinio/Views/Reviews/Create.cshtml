@model MvcMovie_Tarquinio.Models.Reviews


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Write your review of @ViewData["mTitle"] .</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieReview" class="control-label"></label>
                <textarea asp-for="MovieReview" class="form-control"></textarea>
                <span asp-validation-for="MovieReview" class="text-danger"></span>
            </div>
            <input value="@(ViewContext.RouteData.Values["parameterName"])" id="MovieID" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
                <a class="btn btn-default" asp-controller="Movies" asp-action="Details" asp-route-id="@ViewData["mID"]">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
